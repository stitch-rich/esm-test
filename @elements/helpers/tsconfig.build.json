{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "inlineSources": true,

    // Sentry has an easier job of grouping issues if the source path prefix is removed from generated sources.
    "sourceRoot": "/@elements/helpers/"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "ts-node": {
    "esm": true
  },
}
