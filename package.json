{
  "name": "esm-test",
  "version": "1.0.0",
  "author": "Stitch",
  "main": "build/server.js",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "nodemon -r dotenv/config src/server.ts dotenv_config_path=.env.development",
    "build:clean": "rm -rf build",
    "build:server": "tsc",
    "build": "yarn build:clean && yarn build:server",
    "serve": "node server.js",
    "test": "jest --verbose",
    "test:cover": "jest --verbose --coverage",
    "test:watch": "jest --verbose --watch --notify",
    "lint": "eslint './src/**/*'",
    "lint:fix": "eslint './src/**/*' --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.ts",
      "*.mock.ts"
    ],
    "delay": "500"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/luxon": "^3.4.2",
    "@types/node-fetch": "^2.6.4",
    "dotenv": "^16.4.1",
    "jest": "^29.7.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
